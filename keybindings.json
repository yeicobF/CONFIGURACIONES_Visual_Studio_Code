// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+shift+a",
        "command": "workbench.action.addRootFolder"
    },
    {
        "key": "f12",
        "command": "workbench.action.files.saveAs"
    },
    {
        "key": "ctrl+shift+s",
        "command": "-workbench.action.files.saveAs"
    },
    {
        "key": "ctrl+shift+s",
        "command": "workbench.action.files.saveAll"
    },
    {
        "key": "ctrl+k s",
        "command": "-workbench.action.files.saveAll"
    },
    {
        "key": "ctrl+alt+o",
        "command": "workbench.action.openWorkspace"
    },
    {
        "key": "ctrl+alt+s",
        "command": "workbench.action.saveWorkspaceAs"
    },
    {
        "key": "alt+k alt+right",
        "command": "workbench.action.splitEditorRight"
    },
    {
        "key": "alt+k alt+left",
        "command": "workbench.action.splitEditorLeft"
    },
    {
        "key": "alt+k alt+down",
        "command": "workbench.action.splitEditorDown"
    },
    {
        "key": "alt+k alt+up",
        "command": "workbench.action.splitEditorUp"
    },
    {
        "key": "ctrl+k ctrl+c",
        "command": "editor.action.addCommentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+k ctrl+c",
        "command": "-editor.action.addCommentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+shift+f4",
        "command": "workbench.action.closeEditorsAndGroup"
    },
    {
        "key": "alt+k alt+a",
        "command": "workbench.action.focusActiveEditorGroup"
    },
    {
        "key": "ctrl+n ctrl+g",
        "command": "workbench.action.focusNextGroup"
    },
    {
        "key": "ctrl+p ctrl+g",
        "command": "workbench.action.focusPreviousGroup"
    },
    {
        "key": "alt+k alt+l",
        "command": "workbench.action.focusLastEditorGroup"
    },
    {
        "key": "alt+j alt+n",
        "command": "workbench.action.joinTwoGroups"
    },
    {
        "key": "alt+j alt+a",
        "command": "workbench.action.joinAllGroups"
    },
    {
        "key": "alt+k alt+j",
        "command": "workbench.action.maximizeEditor"
    },
    {
        "key": "ctrl+c ctrl+0",
        "command": "workbench.action.closeSidebar"
    },
    {
        "key": "ctrl+insert",
        "command": "-editor.action.clipboardCopyAction"
    },
    {
        "key": "ctrl+oem_comma ctrl+oem_comma",
        "command": "workbench.action.openSettingsJson"
    },
    {
        "key": "ctrl+t ctrl+g",
        "command": "workbench.action.toggleEditorWidths"
    },
    {
        "key": "ctrl+f ctrl+e",
        "command": "workbench.files.action.focusFilesExplorer"
    },
    {
        "key": "ctrl+e ctrl+n",
        "command": "workbench.action.moveEditorToNextGroup"
    },
    {
        "key": "ctrl+alt+right",
        "command": "-workbench.action.moveEditorToNextGroup"
    },
    {
        "key": "ctrl+e ctrl+p",
        "command": "workbench.action.moveEditorToPreviousGroup"
    },
    {
        "key": "ctrl+alt+left",
        "command": "-workbench.action.moveEditorToPreviousGroup"
    },
    {
        "key": "ctrl+e ctrl+l",
        "command": "workbench.action.moveEditorToLastGroup"
    },
    {
        "key": "shift+alt+9",
        "command": "-workbench.action.moveEditorToLastGroup"
    },
    {
        "key": "ctrl+e ctrl+f",
        "command": "workbench.action.moveEditorToFirstGroup"
    },
    {
        "key": "shift+alt+1",
        "command": "-workbench.action.moveEditorToFirstGroup"
    },
    {
        "key": "ctrl+c ctrl+g",
        "command": "workbench.action.closeAllGroups"
    },
    {
        "key": "ctrl+k ctrl+shift+w",
        "command": "-workbench.action.closeAllGroups"
    },
    {
        "key": "ctrl+d ctrl+s",
        "command": "workbench.action.terminal.selectDefaultShell"
    },
    {
        "key": "ctrl+m ctrl+p",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    {
        "key": "alt+k alt+t",
        "command": "workbench.action.terminal.kill"
    },
    {
        "key": "ctrl+e ctrl+t",
        "command": "workbench.action.terminal.openNativeConsole",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+shift+c",
        "command": "-workbench.action.terminal.openNativeConsole",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+l ctrl+g",
        "command": "workbench.action.focusLeftGroup"
    },
    {
        "key": "ctrl+k ctrl+left",
        "command": "-workbench.action.focusLeftGroup"
    },
    {
        "key": "ctrl+r ctrl+g",
        "command": "workbench.action.focusRightGroup"
    },
    {
        "key": "ctrl+k ctrl+right",
        "command": "-workbench.action.focusRightGroup"
    },
    {
        "key": "ctrl+t ctrl+m",
        "command": "editor.action.toggleMinimap"
    },
    {
        "key": "alt+backspace",
        "command": "deleteWordPartLeft"
    },
    {
        "key": "alt+delete",
        "command": "deleteWordPartRight"
    },
    {
        "key": "alt+left",
        "command": "cursorWordPartLeft"
    },
    {
        "key": "alt+right",
        "command": "cursorWordPartRight"
    },
    {
        "key": "shift+alt+left",
        "command": "cursorWordPartLeftSelect"
    },
    {
        "key": "shift+alt+right",
        "command": "cursorWordPartRightSelect"
    },
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-workbench.action.nextEditor"
    },
    {
        "key": "ctrl+pagedown",
        "command": "workbench.action.nextEditorInGroup"
    },
    {
        "key": "ctrl+k ctrl+pagedown",
        "command": "-workbench.action.nextEditorInGroup"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditor"
    },
    {
        "key": "ctrl+pageup",
        "command": "-workbench.action.previousEditor"
    },
    {
        "key": "ctrl+pageup",
        "command": "workbench.action.previousEditorInGroup"
    },
    {
        "key": "ctrl+k ctrl+pageup",
        "command": "-workbench.action.previousEditorInGroup"
    },
    {
        "key": "ctrl+shift+pagedown",
        "command": "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
    },
    {
        "key": "ctrl+tab",
        "command": "-workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
    },
    {
        "key": "ctrl+o ctrl+s",
        "command": "o.pickProjectAndStart"
    },
    {
        "key": "ctrl+shift+7",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+oem_2",
        "command": "-editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"
    },
    {
        "key": "ctrl+f ctrl+oem_plus",
        "command": "editor.action.fontZoomIn"
    },
    {
        "key": "ctrl+f ctrl+oem_minus",
        "command": "editor.action.fontZoomOut"
    },
    {
        "key": "ctrl+f ctrl+0",
        "command": "editor.action.fontZoomReset"
    },
    {
        "key": "ctrl+f ctrl+t",
        "command": "terminal.focus"
    },
    {
        "key": "ctrl+r ctrl+d",
        "command": "workbench.view.debug"
    },
    {
        "key": "ctrl+shift+d",
        "command": "-workbench.view.debug"
    },
    {
        "key": "ctrl+c ctrl+w",
        "command": "workbench.action.closeFolder",
        "when": "emptyWorkspaceSupport"
    },
    {
        "key": "ctrl+k ctrl+f",
        "command": "-workbench.action.closeFolder",
        "when": "emptyWorkspaceSupport"
    },
    {
        "key": "ctrl+t ctrl+a",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    {
        "key": "ctrl+f",
        "command": "actions.find",
        "when": "editorFocus || editorIsOpen"
    },
    {
        "key": "ctrl+c",
        "command": "editor.action.clipboardCopyAction"
    },
    {
        "key": "a",
        "command": "explorer.newFile",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        "key": "shift+a",
        "command": "explorer.newFolder",
        "when": "filesExplorerFocus && !inputFocus"
    },
    {
        // "ctrl + shift + Ã±"
        "key": "ctrl+shift+oem_3",
        "command": "workbench.action.terminal.newWithCwd",
        // PARA ABRIR TERMINAL EN ACTUAL DIRECTORIO.
        "args": {
            // ABRIR TERMINAL EN DIRECTORIO DEL ARCHIVO. SOLO FUNCIONA EN ESTE ARCHIVO.
            // FUENTE: https://code.visualstudio.com/docs/editor/variables-reference
            // fileDirname: Abre en el directorio en donde se encuentra el archivo actual.
            "cwd": "${fileDirname}"
        }
    }
