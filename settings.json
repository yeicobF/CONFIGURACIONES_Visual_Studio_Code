{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 60000, // 1 minuto y medio (1:30 minutos) para autoguardado.
    // "editor.fontFamily": "Consolas, 'Courier New', monospace",
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontSize": 12,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.autoClosingQuotes": "always",
    "editor.codeActionsOnSave": {},
    "editor.codeLensFontFamily": "JetBrains Mono",
    "editor.comments.ignoreEmptyLines": false,
    "editor.glyphMargin": false,
    "editor.mouseWheelZoom": true,
    "editor.renderLineHighlight": "all",
    "editor.formatOnPaste": true,
    "diffEditor.codeLens": true,
    "editor.minimap.renderCharacters": false,
    "editor.suggest.showStatusBar": true,
    "editor.wordBasedSuggestionsMode": "allDocuments",
    "files.hotExit": "onExitAndWindowClose",
    "files.insertFinalNewline": true,
    "workbench.colorTheme": "BeardedTheme Vivid",
    "window.autoDetectHighContrast": false,
    "window.menuBarVisibility": "toggle",
    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.enableBell": true,
    "terminal.integrated.fontFamily": "JetBrains Mono",
    // "terminal.integrated.fontFamily": "Consolas",
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "git.fetchOnPull": true,
    "C_Cpp.vcFormat.indent.preserveComments": true,
    "C_Cpp.vcFormat.indent.preserveWithinParentheses": true,
    "C_Cpp.vcFormat.indent.caseLabels": true,
    "workbench.editorAssociations": [],
    "workbench.iconTheme": "vscode-icons",
    "editor.rulers": [
        80 //, 50],  // Mostrar un margen a los 80 caracteres.
    ],
    // Whether or not to allow chord keybindings in the terminal. Note that when this is true and the keystroke results in a chord it will bypass `terminal.integrated.commandsToSkipShell`, setting this to false is particularly useful when you want ctrl+k to go to your shell (not VS Code).
    //"terminal.integrated.allowChords": false,
    "terminal.integrated.fontSize": 12,
    // "terminal.integrated.fontWeight": "400"
    // Hace que el directorio de OmniSharp sea el último en donde se trabajó.
    "omnisharp.path": "latest",
    /** PARA DESHABILITAR Jupyter con la extensión de Python, ya que funcionan
        en conjunto. Al parecer no funciona.
        
        - FUENTE: disable jupyter editor in vscode #103526
            LINK: https: //github.com/microsoft/vscode/issues/103526*/
    // "python.dataScience.useNotebookEditor": false,
    /** Deshabilitar que Jupyter se inicie automáticamente. */
    "jupyter.disableJupyterAutoStart": false,
    "workbench.startupEditor": "newUntitledFile",
    "terminal.integrated.shell.windows": "C:\\WINDOWS\\System32\\cmd.exe",
    // Quiero que la terminal externa sea el Git Bash.
    "terminal.external.windowsExec": "C:\\Program Files\\Git\\git-bash.exe",
    "editor.minimap.enabled": false,
    // Que se sincornicen los keybindings.
    "settingsSync.keybindingsPerPlatform": true,
    // Para que OmniSharp dure más hasta el Timeout. El default es un minuto.
    // Le pondré 2 minutos 30 segundos.
    "omnisharp.projectLoadTimeout": 150,
    // "discord.workspaceElapsedTime": true,
    "workbench.statusBar.visible": true,
    // PARA UTILIZAR ESTE COMPILADOR POR DEFAULT.
    "C_Cpp.default.compilerPath": "C:\\MinGW\\bin\\g++.exe",
    // "C_Cpp.default.compilerPath": "C:/MinGW/bin/g++.exe",
    // Para poder utilizar paquetes de terceros.
    "C_Cpp.vcpkg.enabled": true,
    // MODO PARA EL INTELLISENSE.
    "C_Cpp.default.intelliSenseMode": "msvc-x64",
    "C_Cpp.default.includePath": null,
    "editor.suggestSelection": "first",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "files.exclude": {
        "**/.classpath": true,
        "**/.project": true,
        "**/.settings": true,
        "**/.factorypath": true
    },
    "editor.tabSize": 4,
    "html.format.wrapLineLength": 80,
    "workbench.activityBar.visible": false,
    "editor.insertSpaces": true,
    // MODIFICAR ESPECÍFICAMENTE LAS CONFIGURACIONES DE HTML.
    "[html]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        // "editor.detectIndentation": false
    },
    "[css]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
    },
    "[cpp]": {
        // PARA QUE NO SE CAMBIE EL FORMATO AL PEGAR ALGO.
        // AGREGUÉ UN COMANDO PARA DARLE FORMATO A LA SELECCIÓN POR SI NO TIENE
        // YA FORMATO: ALT + F + ALT + S (FORMAT SELECTION)
        "editor.formatOnPaste": false
    },
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80
    // "html.format.indentInnerHtml": true,
    // "html.format.indentHandlebars": true
}
